[core]
	editor = vim
	excludesfile = ~/.gitignore-global
[rerere]
	enabled = true
[color]
	ui = true
[stash]
	showPatch = true
[alias]
	trailing-newlines = !git ls-files | xargs sed -i -e '$a\\'
	list-branch-by-date = !git for-each-ref --sort=committerdate --format='%(committerdate:local)\t%(objectname:short)\t%(refname)\t%(subject)' refs/heads/ | column -t -s '\t'
[gpg]
	program = gpg
